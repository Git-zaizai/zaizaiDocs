{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "/": ["docs/*"],
      "/~/*": ["/components/*"]
    }
  },
  "exclude": ["node_modules", ".vite"],
  "include": ["env.d.ts", "/components/*.ts", "/components/*.vue"]
}
