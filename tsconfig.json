{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "/": ["./docs/*"],
      "/~/*": ["./components/*"]
    },
    "types": ["node", "vitepress/client"]
  },
  "exclude": ["node_modules", ".vite"],
  "include": [
    "./env.d.ts",
    "./components/**/*.ts",
    "./components/*.ts",
    "./components/*.vue",
    "./.vitepress/**/*.ts",
    "./docs/**/**.ts"
  ]
}
