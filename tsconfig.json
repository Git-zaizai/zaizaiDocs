{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "/": ["docs/*"],
      "/~/*": ["/components/*"]
    },
    "types": ["node", "vitepress/client"]
  },
  "exclude": ["node_modules", ".vite"],
  "include": ["env.d.ts", "components/*.ts", "components/*.vue"]
}
